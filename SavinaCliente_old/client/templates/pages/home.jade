.container
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
      img.img-responsive(src='/assets/images/logo-full.png')

      .padding-top-large.padding-bottom-large &nbsp;

      .panel
        .panel-heading
          .panel-title
            .panel-title-icon
              i.fa.fa-mr.fa-fw.fa-cloud

            .panel-title-text
              h3 Bienvenido
              p Ingresa a la plataforma con tus credenciales

        form(
          name='form',
          role='form',
          ng-submit='!submitting && form.$valid && signin()',
          novalidate)

          .form-group
            .input-group
              span.input-group-addon
                i.fa.fa-at.fa-fw

              input.form-control(
                placeholder='Ingresa tu email',
                ng-model='form.email',
                type='email',
                autofocus,
                required)

          .form-group
            .input-group
              span.input-group-addon
                i.fa.fa-asterisk.fa-fw

              input.form-control(
                placeholder='Ingresa tu clave',
                ng-model='form.password',
                ng-minlength='4',
                type='password',
                required)

          button.btn.btn-lg.btn-block.btn-default(
            ng-disabled='form.$invalid || submitting',
            type='submit')

            i.fa.fa-fw.margin-right-small(ng-class='submitting && "fa-circle-o-notch fa-spin" || "fa-sign-in"')
            | Ingresar

      include-template(ng-src='/assets/templates/divider.html')

      .text-center
        a.btn.btn-block.btn-default(ng-href='/users/recover')
          | Olvid√© mi clave
